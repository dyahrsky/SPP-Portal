    <!-- Script untuk library JavaScript -->
    <script src="https://d3js.org/d3.v5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.7.20/c3.min.js"></script>
    <script src="https://libs.cartocdn.com/cartodb.js/v3/3.15/cartodb.js"></script>
    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // --- Konfigurasi dan Data ---
            // ==============================================================================================
            // !! PENTING: Ganti URL di bawah ini dengan URL CSV yang dipublikasikan dari Google Sheets Anda.
            // URL ini masih menggunakan contoh placeholder.
            // Pastikan data memiliki kolom 'latitude', 'longitude', dan 'kategori'
            const MAP_DATA_URL = 'https://docs.google.com/spreadsheets/d/1234567890abcdefghijklmnopqrstuvwxyz/gviz/tq?tqx=out:csv&sheet=DataPeta';
            
            // !! PENTING: Ganti URL di bawah ini dengan URL CSV untuk data dashboard Anda.
            // Pastikan data memiliki kolom 'kategori', 'nilai1', 'nilai2', dan 'label'
            const DASHBOARD_DATA_URL = 'https://docs.google.com/spreadsheets/d/1234567890abcdefghijklmnopqrstuvwxyz/gviz/tq?tqx=out:csv&sheet=DataDashboard';

            // ==============================================================================================

            // --- Bagian Peta (CartoDB) ---
            // Asumsi: Anda telah membuat visualisasi di CartoDB (CARTO)
            // !! PENTING: Ganti {user} dengan username CartoDB Anda
            // !! PENTING: Ganti {vis_id} dengan ID visualisasi peta di CartoDB Anda
            const cartoVisId = '{vis_id}';
            const cartoUser = '{username}';

            function initMap() {
                cartodb.createVis('map', `https://${cartoUser}.carto.com/api/v2/viz/${cartoVisId}/viz.json`, {
                    shareable: false,
                    title: false,
                    description: false,
                    search: false,
                    cartodb_logo: false,
                    layer_selector: true, // Mengaktifkan navigasi layer
                    zoomControl: true,
                    scrollwheel: true, // Mengaktifkan zoom dengan mouse scroll
                    fullscreenControl: true // Mengaktifkan tombol fullscreen
                })
                .done(function(vis, layers) {
                    console.log("Peta berhasil dimuat.");
                })
                .error(function(err) {
                    console.error("Gagal memuat peta: " + err);
                    document.getElementById('map').innerHTML = "<p>Gagal memuat peta. Pastikan URL dan ID visualisasi CartoDB sudah benar.</p>";
                });
            }
            initMap();
            
            // --- Bagian Dashboard (C3.js) ---
            const dropdown = document.getElementById('filterDropdown');

            function loadDashboardData() {
                d3.csv(DASHBOARD_DATA_URL).then(function(data) {
                    // Mendapatkan daftar kategori unik
                    const categories = [...new Set(data.map(d => d.kategori))];
                    categories.forEach(category => {
                        const option = document.createElement('option');
                        option.value = category;
                        option.textContent = category;
                        dropdown.appendChild(option);
                    });

                    // Event listener untuk dropdown
                    dropdown.addEventListener('change', function() {
                        const selectedCategory = this.value;
                        const filteredData = selectedCategory === 'all' 
                            ? data 
                            : data.filter(d => d.kategori === selectedCategory);
                        drawCharts(filteredData);
                    });

                    // Gambar chart pertama kali dengan semua data
                    drawCharts(data);
                }).catch(function(error) {
                    console.error("Gagal memuat data dashboard: " + error);
                    document.querySelector('.dashboard-container').innerHTML = "<p>Gagal memuat data dashboard. Pastikan URL Google Sheets sudah benar dan dipublikasikan.</p>";
                });
            }

            function drawCharts(filteredData) {
                // Konfigurasi Bar Chart
                const barChartData = {
                    columns: [['Data', ...filteredData.map(d => +d.nilai1)]],
                    type: 'bar',
                    labels: {
                        format: { 'Data': d3.format('.1f') }
                    }
                };

                // Konfigurasi Pie/Donut Chart
                const pieChartData = {
                    columns: filteredData.map(d => [d.label, +d.nilai2]),
                    type: 'donut',
                };

                // Hapus chart lama sebelum menggambar yang baru
                document.getElementById('barChart').innerHTML = '';
                document.getElementById('pieChart').innerHTML = '';

                // Generate Bar Chart
                c3.generate({
                    bindto: '#barChart',
                    data: barChartData,
                    donut: { title: "Data Bar" },
                    tooltip: { show: true }
                });

                // Generate Pie/Donut Chart
                c3.generate({
                    bindto: '#pieChart',
                    data: pieChartData,
                    donut: { title: "Data Pie" },
                    tooltip: { show: true }
                });
            }

            loadDashboardData();
        });
    </script>
</body>
